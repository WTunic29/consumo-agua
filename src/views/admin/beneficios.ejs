<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Administración de Beneficios</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .beneficio-card {
            transition: transform 0.3s ease;
        }
        .beneficio-card:hover {
            transform: translateY(-5px);
        }
        .stats-card {
            background: linear-gradient(135deg, #4b0082, #800080);
            color: white;
        }
    </style>
</head>
<body>
    <div class="container-fluid mt-4">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3">
                <div class="list-group">
                    <a href="/admin/dashboard" class="list-group-item list-group-item-action">
                        <i class="bi bi-speedometer2"></i> Dashboard
                    </a>
                    <a href="/admin/beneficios" class="list-group-item list-group-item-action active">
                        <i class="bi bi-gift"></i> Beneficios
                    </a>
                    <a href="/admin/usuarios" class="list-group-item list-group-item-action">
                        <i class="bi bi-people"></i> Usuarios
                    </a>
                    <a href="/admin/facturas" class="list-group-item list-group-item-action">
                        <i class="bi bi-receipt"></i> Facturas
                    </a>
                </div>
            </div>

            <!-- Contenido principal -->
            <div class="col-md-9">
                <h2 class="mb-4">Administración de Beneficios</h2>

                <!-- Estadísticas -->
                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="card stats-card">
                            <div class="card-body">
                                <h5 class="card-title">Total Membresías</h5>
                                <h2><%= stats.totalMembresias %></h2>
                                <p class="card-text">
                                    Premium: <%= stats.membresiasPremium %><br>
                                    VIP: <%= stats.membresiasVip %>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card stats-card">
                            <div class="card-body">
                                <h5 class="card-title">Puntos Totales</h5>
                                <h2><%= stats.puntosTotales %></h2>
                                <p class="card-text">
                                    Promedio por usuario: <%= stats.promedioPuntos %>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card stats-card">
                            <div class="card-body">
                                <h5 class="card-title">Descuentos Aplicados</h5>
                                <h2>$<%= stats.totalDescuentos %></h2>
                                <p class="card-text">
                                    Promedio por factura: $<%= stats.promedioDescuento %>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Configuración de Beneficios -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Configuración de Beneficios</h5>
                    </div>
                    <div class="card-body">
                        <form id="configForm">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Puntos por pago puntual (%)</label>
                                        <input type="number" class="form-control" name="puntosPorPago" 
                                               value="<%= config.puntosPorPago %>" min="0" max="100">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Descuento por racha de 3 pagos (%)</label>
                                        <input type="number" class="form-control" name="descuentoRacha3" 
                                               value="<%= config.descuentoRacha3 %>" min="0" max="100">
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Guardar Configuración</button>
                        </form>
                    </div>
                </div>

                <!-- Lista de Beneficios -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Beneficios Activos</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <% beneficios.forEach(beneficio => { %>
                                <div class="col-md-4 mb-3">
                                    <div class="card beneficio-card">
                                        <div class="card-body">
                                            <h5 class="card-title"><%= beneficio.nombre %></h5>
                                            <p class="card-text"><%= beneficio.descripcion %></p>
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" 
                                                       id="beneficio<%= beneficio._id %>" 
                                                       <%= beneficio.activo ? 'checked' : '' %>>
                                                <label class="form-check-label" for="beneficio<%= beneficio._id %>">
                                                    Activo
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Manejar cambios en la configuración
        document.getElementById('configForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            try {
                const response = await fetch('/admin/beneficios/config', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(Object.fromEntries(formData))
                });
                if (response.ok) {
                    alert('Configuración guardada exitosamente');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error al guardar la configuración');
            }
        });

        // Manejar cambios en beneficios
        document.querySelectorAll('.form-check-input').forEach(checkbox => {
            checkbox.addEventListener('change', async (e) => {
                const beneficioId = e.target.id.replace('beneficio', '');
                try {
                    const response = await fetch(`/admin/beneficios/${beneficioId}/toggle`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ activo: e.target.checked })
                    });
                    if (response.ok) {
                        alert('Estado del beneficio actualizado');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('Error al actualizar el beneficio');
                }
            });
        });
    </script>
</body>
</html> 