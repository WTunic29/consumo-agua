<%- include('partials/header') %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <h2 class="card-title mb-4">Verificación de Cuenta</h2>
                    
                    <% if (locals.error) { %>
                        <div class="alert alert-danger">
                            <%= error %>
                        </div>
                        <p>Por favor, intenta registrarte nuevamente o contacta al soporte técnico.</p>
                        <a href="/auth/registro" class="btn btn-primary">Volver al registro</a>
                    <% } else if (locals.mensaje) { %>
                        <div class="alert alert-success">
                            <%= mensaje %>
                        </div>
                        <p>Ahora puedes iniciar sesión con tu cuenta.</p>
                        <a href="/auth/login" class="btn btn-primary">Ir al login</a>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %> 